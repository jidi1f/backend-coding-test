{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "allowJs": true,                            
       "checkJs": true,   
       "target": "es6",
       "noImplicitAny": true,
       "moduleResolution": "node",
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "paths": {
           "*": ["node_modules/*", "@types/*", "src/types/*"]
       }
   },
   "include": ["src/**/*.ts",".eslintrc.js", ".prettierrc.js"],
   "exclude": ["node_modules", "dist"],
   "lib": ["es2016", "dom"]
}
